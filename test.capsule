<capsule>
    <meta>
        <title>test capsule</title>
        <script>
            function onclick()
            print(`mem usage: {capsule.used_memory()}`)
            capsule.root().children[1].children[2].width = `{math.random(1, 100)}%`
            end

            print(capsule.root().children[1].width)
            print(capsule.root().children[1].children[1].width)
        </script>
    </meta>
    <view>
        <obj justify="spacebetween" onclick="onclick">
            <text>hello, world!</text>
            <obj width="50%" height="20" color="green" />
            <text color="#ff00008f">hello, world! b5</text>
        </obj>
        <obj align="center" justify="flexstart" flexdir="column">
            <text>ahello world but cooler!</text>
            <obj width="41.5%" height="20" color="red" />
            <text color="#ff00008f">hello, world! b2</text>
        </obj>
    </view>
</capsule>